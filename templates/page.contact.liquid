<div id="col-main" class="content">
    

	<div class="title-bar custom-font">
		<h1 class="main-heading" style="text-align:center;">Contact Us</h1>
		<div class="clear"></div>
	</div>
    <div class="contact-first-info">
      {% section 'text--rich-text' %}
    </div>
  <div class="contact-row-main-sec">
	<div class="row">
		<div class="col-md-10 col-12">

		{% if page.content != blank %}
		<div class="contact-page__entry-content entry-content">
			{{ page.content }}
		</div>
		{% endif %}
<!-- 
          <div style="margin:0 auto;" class="pxFormGenerator" id="qdoajj6ie0qQs6_dcmtN2A"></div>		 -->
      
     
          
	  {% form 'contact' %}

		<p class="success-msg form-success{% unless form.posted_successfully? %} hide{% endunless %}">
			{{ 'contact.form.post_success' | t }}

		</p>


		{% render 'form-errors-custom' %}

    <div id="contact-form">

			<div class="row">

				<div class="col-md-6 col-12">
		      <div class="form-group">
						<label for="name">First Name</label>
						<input type="text"
							name="contact[name]"
							id="name"
							class="form-control"
							value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
		      </div>
				</div>
              
             <div class="col-md-6 col-12">
		      <div class="form-group">
						<label for="name">Last Name</label>
						<input type="text"
							name="contact[name]"
							id="name"
							class="form-control"
							value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
		      </div>
		     </div>

				

			</div>

      		<div class="row">
             <div class="col-md-12 col-12">
                  <div class="form-group">
                            <label for="email">{{ 'contact.form.email' | t }}</label>
                            <input type="email"
                                name="contact[email]"
                                id="email"
                                class="form-control"
                                value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                                spellcheck="false"
                                autocomplete="off"
                                autocapitalize="off">
                  </div>
				</div> 
            </div>
      
      
			<div class="row">
				<div class="col-md-12 col-12">
					<div class="form-group">
						<label for="phone">{{ 'contact.form.phone' | t }}</label>
					  <input type="tel"
					    name="contact[phone]"
							class="form-control"
					    id="phone"
					    value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
					    pattern="[0-9\-]*">
					</div>
				</div>
<!--               	<div class="col-md-6 col-12">
                	<div class="form-group">
						<label for="phone">{{ 'contact.form.phone' | t }}</label>
					  <input type="tel"
					    name="contact[phone]"
							class="form-control"
					    id="phone"
					    value="{% if form[phone] %}{{ form[phone] }}{% elsif customer %}{{ customer.phone }}{% endif %}"
					    pattern="[0-9\-]*">
					</div>		  
                </div> -->
              
			</div>

			<div class="row">
				<div class="col-md-12">
		      <div class="form-group">
		        <label for="message">{{ 'contact.form.message' | t }}</label>
		        <textarea id="message" rows="10" class="form-control" name="contact[body]">{% if form.body %}{{ form.body }}{% endif %}</textarea>
		      </div>
				</div>
			</div>
      
      {% comment %}
            <div class="col-md-12">
              <div class="form-group">
                <label for="image">Upload Image</label>
                <input type="file"
                       name="contact[image]"
                       id="image"
                       class="form-control"
                       value="{% if form[image] %}{{ form[image] }}{% elsif customer %}{{ customer.name }}{% endif %}">
              </div>
            </div>
      {% endcomment %}


			{{ 'shopify.online_store.spam_detection.disclaimer_html' | t }}
			
			<div class="row">
				<div class="col-md-12 btn-contact--wrapper">
		      <div class="form-group" id="newsletter-wrapper">
		        <input type="submit" class="btn" value="{{ 'contact.form.send' | t }}" />
		      </div>
		      <div class="lds-dual-ring newsletter-spinner hide"></div>
				</div>
			</div>

    </div>

	  {% endform %}


	  </div>
	</div>
  </div>
  
  
  {%section 'contact-info'%}

</div>

{%section 'newsletter--newsletter'%}


<style>
.form_title_div {
    display: none !important;
}


</style>

